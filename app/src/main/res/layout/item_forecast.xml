<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_45mdp"
    android:layout_height="wrap_content">
    <!--Date-->
    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_3mdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_9font_mdp"
        android:alpha="0.7"
        app:fontPath="fonts/iransans.ttf"
        app:layout_constraintEnd_toEndOf="@id/iconImg"
        app:layout_constraintStart_toStartOf="@id/iconImg"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Icon-->
    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTxt" />
    <!--Temp-->
    <TextView
        android:id="@+id/tempTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_mini"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_3mdp"
        android:textColor="@color/darkMetal"
        android:textSize="@dimen/_8font_mdp"
        app:fontPath="fonts/iransans.ttf"
        android:layout_marginTop="@dimen/_5mdp"
        app:layout_constraintEnd_toEndOf="@id/iconImg"
        app:layout_constraintStart_toStartOf="@id/iconImg"
        app:layout_constraintTop_toBottomOf="@id/iconImg" />
    <!--Humidity-->
    <TextView
        android:id="@+id/humidityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:drawablePadding="@dimen/_2mdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_8font_mdp"
        app:drawableStartCompat="@drawable/droplet_percent"
        app:drawableTint="@color/cornflowerBlue"
        app:fontPath="fonts/iransans.ttf"
        app:layout_constraintEnd_toEndOf="@id/iconImg"
        app:layout_constraintStart_toStartOf="@id/iconImg"
        app:layout_constraintTop_toBottomOf="@id/tempTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>